<profiles>
	<profile>
		<name>To watch Full HD TV</name>
                <options>-vcodec libx264 -s 1920x1080 -acodec libmp3lame -crf 20.0</options>
                <extension>avi</extension>
		<prefix>Full-hd-</prefix>
	</profile>
        <profile>
		<name>To watch HD TV</name>
                <options>-vcodec libx264 -s 1280x720 -acodec libmp3lame -crf 25.0</options>
                <extension>avi</extension>
		<prefix>hd-</prefix>
	</profile>
	<profile>
		<name>To watch DVD</name>
                <options>-vcodec libx264 -s 720x480 -acodec libmp3lame -crf 30.0</options>
                <extension>avi</extension>
		<prefix>dvd-</prefix>
	</profile>
	<profile>
                <name>To watch mobile</name>
                <options>-vcodec libx264 -s 320x240 -acodec libmp3lame -deinterlace -sameq -crf 30.0</options>
                <extension>avi</extension>
                <prefix>mobile-</prefix>
	</profile>
	<profile>
		<name>To watch Web</name>
                <options>-vcodec libx264 -s 640x480 -acodec libmp3lame -deinterlace -sameq -crf 30.0</options>
                <extension>avi</extension>
		<prefix>web-</prefix>
	</profile>
	
</profiles>
